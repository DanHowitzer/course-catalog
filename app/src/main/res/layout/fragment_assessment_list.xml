<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <!--bind data to view model-->
        <variable name="assessmentListViewModel"
                  type="com.example.coursecatalog.assessments.AssessmentListViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".assessments.AssessmentDetailFragment"
    >
        <TextView
                android:maxLines="1"
                android:lines="1"
                android:maxLength="20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/course_title"
                app:courseTitleFormatted="@{assessmentListViewModel.course}"
                android:layout_marginStart="@dimen/small_margin"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent"/>
        <androidx.recyclerview.widget.RecyclerView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/assessment_list"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/term_add_button"
                android:src="@android:drawable/ic_menu_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/assessment_list"
                android:onClick="@{() -> assessmentListViewModel.onAddAssessment()}" app:backgroundTint="#4CAF50"
                app:fabSize="mini"/>
        <TextView
                android:text="Assessments for this course:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/course_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>