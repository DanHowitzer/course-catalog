<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>

        <variable name="coursePickerViewModel"
                  type="com.example.coursecatalog.courses.CoursePickerViewModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".courses.CoursePickerFragment">
        <TextView
                android:text="@string/add_course_to_term_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/choose_course_text"
                android:layout_marginTop="@dimen/small_margin"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="@dimen/small_margin"
                android:textStyle="bold" android:textAppearance="@style/TextAppearance.AppCompat.Display1"/>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@android:drawable/ic_input_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/floatingActionButton" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/choose_course_text"/>
        <TextView
                android:text="@string/choose_course_instructions_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3" android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/choose_course_text"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"/>
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/course_picker_list"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/floatingActionButton"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layout_marginTop="@dimen/small_margin"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>